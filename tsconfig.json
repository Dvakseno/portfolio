{
  "compilerOptions": {
    "target": "ES2015",
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
  "include": [
    "./src/*",
    "./src/**/*",
    "**/*.ts",
    "**/*/tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}